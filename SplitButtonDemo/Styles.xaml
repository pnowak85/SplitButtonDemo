<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:SplitButtonDemo"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls">

    <!--  Use BasedOn to yeah base on the original style. We use the default style here but you can base on another one as well by providing the Key  -->
    <Style
        x:Key="SplitButtonStyle"
        BasedOn="{StaticResource {x:Type mah:SplitButton}}"
        TargetType="{x:Type mah:SplitButton}">
        <!--  And now we need just to change the Setters we like to change.  -->
        <Setter Property="ArrowBrush" Value="{DynamicResource MahApps.Brushes.Highlight}" />
        <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent4}" />
    </Style>

</ResourceDictionary>